<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:textSize="18sp"
            android:text="Что вы любите большего всего в жизни"/>

    <TextView
            android:id="@+id/first_param_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"

            android:text="Маму: 2"/>

    <SeekBar
            android:id="@+id/first_param"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:max="10"
            android:progress="1"
            android:progressBackgroundTint="@color/colorWhite"
            android:layout_below="@+id/first_param_text"
            android:layout_marginBottom="12sp"/>

    <TextView
            android:id="@+id/second_param_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:text="Андройд : 2"
            android:layout_below="@+id/first_param"/>
    <SeekBar
            android:id="@+id/second_param"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:max="10"
            android:progress="1"
            android:progressBackgroundTint="@color/colorWhite"
            android:layout_below="@+id/second_param_text"
            android:layout_marginBottom="12sp"/>

    <TextView
            android:id="@+id/third_param_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:text="Онимэ : 2"
            android:layout_below="@+id/second_param"
            android:layout_marginBottom="10sp"/>
    <SeekBar
            android:id="@+id/third_param"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:max="10"
            android:progress="1"
            android:progressBackgroundTint="@color/colorWhite"
            android:layout_below="@+id/third_param_text"
            android:layout_marginBottom="12sp"/>

    <TextView
            android:id="@+id/fourth_param_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:text="Покушоть : 2"
            android:layout_below="@+id/third_param"
            android:layout_marginBottom="10sp"/>
    <SeekBar
            android:id="@+id/fourth_param"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:max="10"
            android:progress="1"
            android:progressBackgroundTint="@color/colorWhite"
            android:layout_below="@+id/fourth_param_text"
            android:layout_marginBottom="12sp"/>

    <Button android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/fourth_param"
    android:text="Ну че народ?"/>

</RelativeLayout>